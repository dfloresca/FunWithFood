<body class="text-center">

    <main class="form-signin">
        <form action="/recipe/<%= recipe.recipeName %>/?_method=PUT" method="POST" >
            <h1 class="h3 mb-3 fw-normal">Edit recipe <%= recipe.recipeName %>  </h1>

            <div class="form-floating">
                <input type="text" class="form-control" id="description" name="description" placeholder="<%= recipe.description %>">
                <label for="description">Recipe Description</label>
            </div>
            
            <div class="form-check d-flex justify-content-center mb-4">
                <input name="signatureDish" class="form-check-input me-2" type="checkbox" value="true"
                    id="signatureDish"/>
                <label class="form-check-label" for="signatureDish">
                    Signature Dish?
                </label>
            </div>
            <div class="form-check d-flex justify-content-center mb-4">
                <input name="cooked" class="form-check-input me-2" type="checkbox" value="true" id="cooked" />
                <label class="form-check-label" for="cooked">
                    Cooked?
                </label>
            </div>
            
            <button class="btn btn-lg btn-primary" type="submit">Update recipe</button> <br><br>
            <a href="/recipe/view/<%= recipe.recipeName %>" class="btn btn-danger">Cancel Update</a>
            <p class="mt-5 mb-3 text-muted">&copy; 2023</p>
        </form>
    </main>



</body>

