<link rel="stylesheet" href="../../public/css/recipeview.css">

<section class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-4 mb-sm-5">
                <div class="card card-style1 border-0">
                    <div class="card-body p-1-9 p-sm-2-3 p-md-6 p-lg-7">
                        <% if (response.data.recipe=== 'bad-recipe') { %>
                            <div class="alert alert-primary" role="alert">
                                This recipe cannot be parsed <a href="/profile" class="alert-link"> Return to profile</a>
                            </div>
                        <% } else { %>
                            <div class="card mb-3">
                                <img src="..." class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">Card title</h5>
                                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                    <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                                </div>
                            </div>
                            
                            <div class="row align-items-center">
                                <div class="col-lg-6 mb-4 mb-lg-0">
                                    <img class="recipePhoto" src="<%= response.data.recipe.image %>" alt="image of the recipe" >
                                </div>
                                <div class="col-lg-6 px-xl-10">
                                    <div class="bg-secondary d-lg-inline-block py-1-9 px-1-9 px-sm-6 mb-1-9 rounded">
                                        <h3 class="h2 text-white mb-0">
                                            <%= recipe.recipeName %>
                                        </h3>
                                    </div>
                                    <ul>
                                        <li class="description">
                                            <p class="description">Description: <%= response.data.recipe.description %>
                                            </p>
                                        </li>
                                        <li class="url">
                                            <p class="url">Original Url: <a href="<%= recipe.url %>"><%= recipe.url %></a></p>
                                        </li>
                                        <li class="cookTime">
                                            <p class="cookTime">Cook Time: <%= response.data.recipe.cookTime %>
                                            </p>
                                        </li>
                                        <li class="prepTime">
                                            <p class="prepTime">Prep Time: <%= response.data.recipe.prepTime %>
                                            </p>
                                        </li>
                                        <li class="yield">
                                            <p class="yield">Yield: <%= response.data.recipe.recipeYield %>
                                            </p>
                                        </li>
                                        <li>
                                            <ul class="ingredients">
                                                <p class="ingredients">Ingredients: </p>
                                                <% for( let i=0; i < response.data.recipe.recipeIngredients.length; i++ ) { %>
                                                    <li>
                                                        <%= response.data.recipe.recipeIngredients[i] %>
                                                    </li>
                                                    <% } %>
                                            </ul>
                                        </li>
                                        <li>
                                            <ul class="instructions">
                                                <p class="instructions">Instructions: </p>
                                                <% for( let i=0; i < response.data.recipe.recipeInstructions.length; i++ ) { %>
                                                    <li>
                                                        <%= response.data.recipe.recipeInstructions[i].text %>
                                                    </li>
                                                    <% } %>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                                
                            </div>                          
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>